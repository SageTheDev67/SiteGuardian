{
  "name": "SiteGuardian",
  "description": "Privacy intelligence: storage, cookies, trackers, trust score, alerts, history.",
  "version": "1.0.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "dashboard/dashboard.html"
  },

  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "alarms",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],

  "host_permissions": ["<all_urls>"],

  "declarative_net_request": {
    "rule_resources": [
      { "id": "t1", "enabled": true, "path": "rules/tracker_rules_1.json" },
      { "id": "t2", "enabled": true, "path": "rules/tracker_rules_2.json" },
      { "id": "t3", "enabled": true, "path": "rules/tracker_rules_3.json" }
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
